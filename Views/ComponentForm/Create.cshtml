<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComponentTypeId" class="control-label"></label>
                <select asp-for="ComponentTypeId" class ="form-control" asp-items="@(new SelectList(@ViewBag.types, "ComponentTypeId", "ComponentName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ComponentNumber" class="control-label"></label>
                <input asp-for="ComponentNumber" class="form-control" />
